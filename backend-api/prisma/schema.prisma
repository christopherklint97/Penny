// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// DB info
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model declarations for Prisma
model User {
  id         Int           @id @default(autoincrement())
  firstName  String
  lastName   String
  email      String
  profileImg String
  googleId   String?
  facebookId String?
  groups     GroupToUser[]
}

model Group {
  id        Int           @id @default(autoincrement())
  name      String
  createdAt DateTime      @default(now())
  users     GroupToUser[]
  trips     Trip[]
}

model GroupToUser {
  groupId Int
  group   Group @relation(fields: [groupId], references: [id])
  userId  Int
  user    User  @relation(fields: [userId], references: [id])

  @@id([groupId, userId])
}

model Trip {
  id        Int      @id @default(autoincrement())
  name      String
  mainImg   String
  startDate DateTime
  endDate   DateTime
  groupId   Int
  group     Group    @relation(fields: [groupId], references: [id])
  flights   Flight[]
  hotels    Hotel[]
}

model Flight {
  id         Int      @id @default(autoincrement())
  fromCity   String
  toCity     String
  depart     DateTime
  arrival    DateTime
  totalPrice Int
  currency   String
  tripId     Int
  trip       Trip     @relation(fields: [tripId], references: [id])
}

model Hotel {
  id         Int      @id @default(autoincrement())
  name       String
  city       String
  startDate  DateTime
  endDate    DateTime
  totalPrice Int
  currency   String
  tripId     Int
  trip       Trip     @relation(fields: [tripId], references: [id])
}

generator client {
  provider = "prisma-client-js"
}
